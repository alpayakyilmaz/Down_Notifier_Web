@model IEnumerable<Down_Notifier_Web.Models.HealthCheckModel>


<div class="col-md-12">
    <a href="@Url.Action("Create","HealthCheck")" class="btn btn-primary" role="button">AddUrl</a>
</div>
<br />
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Checks Whether List</h3>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PeriodType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Period)
                        </td>
                        <td>
                            @if (item.PeriodType == (int)Down_Notifier_Web.Enums.PeriodType.Second)
                            {
                                <span>Second</span>
                            }
                            @if (item.PeriodType == (int)Down_Notifier_Web.Enums.PeriodType.Mininute)
                            {
                                <span>Minute</span>
                            }
                            @if (item.PeriodType == (int)Down_Notifier_Web.Enums.PeriodType.Hour)
                            {
                                <span>Hour</span>
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","HealthCheck",new { id = item.Id})" class="btn btn-warning" role="button">Edit</a>
                            <a href="@Url.Action("Delete","HealthCheck",new { id = item.Id})" class="btn btn-danger" role="button">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

   
    </div>


</div>
